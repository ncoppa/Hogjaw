<%= form_for @concert do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :show_date %><br />
    <%= f.datetime_select :show_date %>
  </p>
  <p>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p><%= f.submit %></p>
<% end %>
